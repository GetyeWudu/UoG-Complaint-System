# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Email Configuration (SMTP)
# For testing, use console backend (emails print to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For real emails, uncomment below and add your Gmail credentials:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-gmail-app-password
# DEFAULT_FROM_EMAIL=UoG Complaints <your-email@gmail.com>
# ADMIN_EMAIL=admin@uog.edu.et

# Current setting (console - for testing)
DEFAULT_FROM_EMAIL=UoG Complaints <noreply@uog.edu.et>
ADMIN_EMAIL=admin@uog.edu.et

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# OAuth2 Configuration (University SSO)
OAUTH_ENABLED=False
OAUTH_PROVIDER_NAME=University of Gondar Portal
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_AUTHORIZATION_URL=https://portal.uog.edu.et/oauth/authorize
OAUTH_TOKEN_URL=https://portal.uog.edu.et/oauth/token
OAUTH_USER_INFO_URL=https://portal.uog.edu.et/oauth/userinfo
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/oauth/callback

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# 2FA Settings
TOTP_ISSUER_NAME=UoG Complaint System
TOTP_DIGITS=6
TOTP_PERIOD=30

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/uog_complaints.log
